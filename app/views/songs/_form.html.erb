<%= form_for @song  do |f| %>
  <% if @song.artist_id %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.hidden_field :author_id %>
  <% else %>
  <%= artist_select(:artist_id, f) %>
  <% end %>
  <br />

  <%= f.submit %>
<% end %>
