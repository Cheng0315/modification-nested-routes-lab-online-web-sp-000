<%= form_for @song  do |f| %>
  <% if @song.artist_id %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <% else %>
  <%= f.select :artist_id, options_from_collection_for_select(Artist.all, :id, :name) %>
  <% end %>
  <br />

  <%= f.submit %>
<% end %>
